<!DOCTYPE html>
<html>
  <head>
    <title>bujit</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <!-- Stop pinch zoom on mobile devices -->
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />
    <!-- Bootstrap -->
    <%= stylesheet_link_tag 'bootstrap.css', 'bootstrap-theme.css', :cache => true %>
    <!-- favicon -->
    <%= favicon_link_tag 'apple-touch-icon-iphone.png', :rel => 'apple-touch-icon', :type => 'image/png' %>
    <%= favicon_link_tag 'apple-touch-icon-ipad.png', :rel => 'apple-touch-icon', :type => 'image/png', :size => '72x72' %>
    <%= favicon_link_tag 'apple-touch-icon-iphone4.png', :rel => 'apple-touch-icon', :type => 'image/png', :size => '114x114' %>
    <%= favicon_link_tag 'apple-touch-icon-ipad3.png', :rel => 'apple-touch-icon', :type => 'image/png', :size => '144x144' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <div class="content main">
      <div class="loading">
        <%= image_tag 'loader.gif', alt: "Loading" %>
      </div>
    </div>
    <div class="template home">
      <%= render 'user/index' %>
    </div>
    <div class="template user new">
      <%= render 'user/new' %>
    </div>
    <div class="template transaction new">
      <%= render 'transaction/new' %>
    </div>
    <div class="template session new">
      <%= render 'session/new' %>
    </div>
    <div class="template bujit edit">
      <%= render 'bujit/edit' %>
    </div>
    <div class="template bank edit">
      <%= render 'bank/edit' %>
    </div>
  </body>
  <script type="text/javascript">
    window.budget_urls = {
      auth: "<%= auth_path %>",
      sign_up: "<%= sign_up_path %>"
    }
  </script>
</html>
