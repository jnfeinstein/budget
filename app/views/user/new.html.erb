<% if @user.errors.any? %>
	<h2><%= @user.errors.full_messages.first %></h2>
<% end %>
<p>
  <%= form_for @user, url: {action: "create"},
  					html: {class: "form_new_user"},
  					method: "post" do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= label_tag :password, "password" %>
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= f.submit "create" %>
    </p>
  <% end %>
</p>