<h1>bujit.me</h1>
<% if current_user %>
  <p>Your bujit is <%= number_to_currency(current_user.bujit.amount) %></p>
  <p>You bank has <%= number_to_currency(current_user.bank.total) %></p>
  <p><%= link_to "spent money", new_transaction_path %></p>
  <p><%= link_to "set bujit", edit_bujit_path(current_user.bujit) %></p>
  <p><%= link_to "modify bank", edit_bank_path(current_user.bank) %></p>
  <p><%= link_to "logout", log_out_path %></p>
<% else %>
  <p><%= link_to "sign up", sign_up_path %></p>
  <p><%= link_to "login", log_in_path %></p>
<% end %>

<% flash.each do |name, msg| %>
  <h2><%= content_tag :div, msg, :id => "flash_#{name}" %></h2>
<% end %>
