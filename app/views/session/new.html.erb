<div class="content session-new">
  
  <div class="header">
    <h1>login</h1>
  </div>

  <div class="body">
    <%= form_tag session_index_path do %>
      <div class="form-group">
        <%= label_tag :email, "What's your email?" %>
        <%= text_field_tag :email, '', :class => 'form-control', :placeholder => 'Email' %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "What's your password?" %>
        <%= password_field_tag :password, '', :class => 'form-control', :placeholder => 'Password' %>
      </div><br/>
      <%= submit_tag "login" %>
    <% end %>
  </div>

  <div class="footer">
    <% flash.each do |name, msg| %>
      <h5><%= content_tag :div, msg, :id => "flash_#{name}" %></h5>
    <% end %>
  </div>
  
</div>
